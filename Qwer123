    const messages = [
      "You are exactly where you need to be.",
      "The Universe smiles at your courage.",
      "Today holds magical moments for you.",
      "Something wonderful is on its way.",
      "The light you give out will return.",
      "You are loved more than you know.",
      "Even the stars took time to shine.",
      "The world is better because you're in it.",
      "One smile can change the whole day.",
      "You are made of stardust and dreams."
    ];
    const randomMessage = messages[Math.floor(Math.random() * messages.length)];
